<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Ratings</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            background-color: #eee;
        }

        div.stars {
            width: 270px;
            display: inline-block;
        }

        .mt-200 {
            margin-top: 40px;
        }

        input.star {
            display: none;
        }

        label.star {
            float: left; /* Align stars to the left */
            padding: 4px;
            font-size: 25px;
            color: #4A148C;
            transition: all .2s;
        }

        input.star:checked ~ label.star:before {
            content: '\f005'; /* Checked star */
            color: #FD4;
            transition: all .25s;
        }

        input.star-1:checked ~ label.star:before {
            color: #F62;
        }

        label.star:hover {
            transform: rotate(-15deg) scale(1.3);
        }

        label.star:before {
            content: '\f006'; /* Unchecked star */
            font-family: FontAwesome;
        }

        .comment-section {
            margin-top: 10px;
            width: 90%;
        }

        .comment-section h3 {
            margin-bottom: 14px;
            font-size: 14px;
        }

        .comment-section textarea {
            width: 100%;
            height: 100px;
            padding: 5px;
            resize: vertical;
            border-radius: 20px;
            border-color: #ddd;
            color: black;
            background-color: #d3d3d3;
        }

        .comment-section button {
            margin-top: 8px;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <div class="container d-flex flex-column justify-content-center mt-200">
        <div class="row">
            <div class="col-md-12">
                <div class="stars" id="stars-<%= id %>">
                    <form action="">
                        <input class="star star-1" id="star-1-<%= id %>" type="radio" name="star-<%= id %>" value="1"/>
                        <label class="star star-1" for="star-1-<%= id %>"></label>
                        <input class="star star-2" id="star-2-<%= id %>" type="radio" name="star-<%= id %>" value="2"/>
                        <label class="star star-2" for="star-2-<%= id %>"></label>
                        <input class="star star-3" id="star-3-<%= id %>" type="radio" name="star-<%= id %>" value="3"/>
                        <label class="star star-3" for="star-3-<%= id %>"></label>
                        <input class="star star-4" id="star-4-<%= id %>" type="radio" name="star-<%= id %>" value="4"/>
                        <label class="star star-4" for="star-4-<%= id %>"></label>
                        <input class="star star-5" id="star-5-<%= id %>" type="radio" name="star-<%= id %>" value="5"/>
                        <label class="star star-5" for="star-5-<%= id %>"></label>
                    </form>
                </div>
            </div>
        </div>
        <div class="row comment-section" id="comment-section-<%= id %>">
            <div class="col-md-8">
                <h3>O que você achou desse conteúdo?</h3>
                <form>
                    <textarea placeholder=" " rows="1" id="comment-<%= id %>"></textarea>
                    <button type="submit" class="btn btn-primary" id="submit-<%= id %>">enviar</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-firestore.js"></script>
    <script>
        // Inicializar o Firebase
        const firebaseConfig = {
            // suas credenciais do Firebase
        };

        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        // Obter o ID da disciplina da URL
        const url = new URL(window.location.href);
        const disciplinaId = url.searchParams.get('id');

        // Adicionar um manipulador de evento para o botão "enviar"
        const submitButton = document.getElementById(`submit-${disciplinaId}`);
        submitButton.addEventListener('click', (event) => {
            event.preventDefault();

            // Obter os valores das estrelas e do comentário
            const stars = document.querySelector(`input[name="star-${disciplinaId}"]:checked`).value;
            const comment = document.getElementById(`comment-${disciplinaId}`).value;

            // Salvar os dados no Firestore
            db.collection('disciplinas').doc(disciplinaId).set({
                stars: stars,
                comment: comment
            })
            .then(() => {
                console.log('Dados salvos com sucesso!');
            })
            .catch((error) => {
                console.error('Erro ao salvar os dados:', error);
            });
        });
    </script>
</body>
</html>

